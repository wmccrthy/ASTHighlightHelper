{
  "name": "ast-highlight-helper",
  "displayName": "AST Highlight Helper",
  "description": "Show AST representation of highlighted code using Luau/Lute",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ast-highlight-helper.showAST"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ast-highlight-helper.showAST",
        "title": "Show AST of Selected Code"
      }
    ],
    "keybindings": [
      {
        "command": "ast-highlight-helper.showAST",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus && editorHasSelection"
      }
    ],
    "configuration": {
      "title": "AST Highlight Helper",
      "properties": {
        "astHighlightHelper.hotkey": {
          "type": "string",
          "default": "ctrl+shift+a",
          "description": "Hotkey to trigger AST display"
        },
        "astHighlightHelper.luteExecutable": {
          "type": "string",
          "default": "",
          "description": "Path to the Lute executable (leave empty for auto-detection)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "child_process": "^1.0.2"
  }
} 